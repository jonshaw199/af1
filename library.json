{
  "name": "AF1",
  "version": "1.0.27",
  "description": "Arduino/ESP32 Framework ✔ State Management ✔ Websocket Client ✔ ESP-Now P2P ✔ Event Scheduling ✔ Over-The-Air Firmware Updates ✔ Serial Input Handling",
  "keywords": "arduino, esp32, iot, espnow, websocket, client, server, ota, state, management, event, scheduling, over-the-air, firmware, updates, serial, input, lightweight, extendable, performant, framework",
  "authors": [
    {
      "name": "Jon Shaw",
      "email": "jonshaw199@gmail.com",
      "url": "https://github.com/jonshaw199"
    }
  ],
  "license": "LGPL-3.0",
  "dependencies": {
    "esp32-websocket": "https://github.com/jonshaw199/esp32-websocket.git",
    "ArduinoJson": "https://github.com/bblanchon/ArduinoJson.git"
  },
  "frameworks": "Arduino",
  "platforms": "*",
  "build": {
    "flags": [
      "-D DEVICE_PREFIX=JS",
      "-D DEVICE_AP_PASS=1234567890",
      "-D PRINT_WIFI_SCAN_RESULTS=false",

      "-D ESPNOW_CHANNEL=0",
      "-D SLAVE_CNT=4",
      "-D DEFAULT_RETRIES=3",
      "-D RETRIES_PURG=10",

      "-D DELAY_PREPARE_WIFI=333",
      "-D DELAY_SEND=2",
      "-D MS_PURG_DEFAULT=999",
      "-D MS_MASTER_HANDSHAKE_LOOP=333",

      "-D STATE_WS_FALLBACK=STATE_IDLE_BASE",
      "-D STATE_ESPNOW_FALLBACK=STATE_IDLE_BASE"
    ]
  }
}
